{% for seed in [1,2,3,4,5] -%}
{% for template, initial_trigger in [
    ('{passage} [SEP] [T] [T] {question} [T] [T] {answer} ? [P].', ['▁question', ':', '▁is', '▁it']),
] -%}
{% set i = loop.index %}
{% for label_map in [
    '{"0": "false", "1": "true"}',
    '{"0": "no", "1": "yes"}',
] -%}
{% set j = loop.index %}
{% for warm_start in [True, False] -%}
{% for finetune_mode in ['trigger', 'partial', 'all'] -%}
---
out: cinf_model_albert-xxlarge-v2_seed_{{seed}}_template_{{i}}_label-map_{{j}}_warm-start_{{warm_start}}_finetune-mode_{{finetune_mode}}
script: autoprompt/continuous_trigger_mlm.py
args:
    - '--model-name'
    - 'albert-xxlarge-v2'
    - '--train'
    - 'data/FewGLUE/MultiRC/train.jsonl'
    - '--dev'
    - 'data/SuperGLUE/MultiRC/val.jsonl'
    - '--test'
    - 'data/SuperGLUE/MultiRC/val.jsonl'
    - '--preprocessor'
    - 'multirc'
    - '--evaluation-strategy'
    - 'classification'
    - '--template'
    - "{{template}}"
    - '--label-map'
    - '{{label_map}}'
{% if warm_start %}
    - '--initial-trigger' 
{% for token in initial_trigger %}
    - '{{token}}'
{% endfor %}
{% endif %}
    - '--seed'
    - '{{seed}}'
    - '--epochs'
    - '15'
    - '--bsz'
    - '2'
    - '--accumulation-steps'
    - '8'
    - '--lr'
    - '1e-5'
    - '--clip'
    - '1.0'
    - '--finetune-mode'
    - '{{finetune_mode}}'
    - '--skip-eval'
    - '--tmp'
    - '--quiet'
    - '-f'
    - '--ckpt-dir'
    - 'ckpt/multirc/cinf_model_albert-xxlarge-v2_seed_{{seed}}_template_{{i}}_label-map_{{j}}_warm-start_{{warm_start}}_finetune-mode_{{finetune_mode}}'
...
{% endfor %}
{%- endfor %}
{%- endfor %}
{%- endfor %}
{%- endfor %}
