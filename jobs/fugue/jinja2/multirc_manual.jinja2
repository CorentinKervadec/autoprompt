{% for template in [
    '{passage} [SEP] Question: {question} Is it {answer} ? [P].',
] -%}
{% set template_idx = loop.index %}
{% for label_map in [
    '{"0": "false", "1": "true"}',
    '{"0": "no", "1": "yes"}',
] -%}
{% set label_idx = loop.index %}
---
out: multirc-manual_model_roberta-large_template_{{template_idx}}_label-map_{{label_idx}}
script: autoprompt/continuous_trigger_mlm.py
args:
    - '--model-name'
    - 'roberta-large'
    - '--train'
    - 'data/SuperFUGUE/MultiRC/train.jsonl'
    - '--dev'
    - 'data/SuperFUGUE/MultiRC/dev.jsonl'
    - '--test'
    - 'data/SuperFUGUE/MultiRC/dev_all.jsonl'
    - '--preprocessor'
    - 'multirc'
    - '--ckpt-dir'
    - 'ckpt/multirc-manual_model_roberta-large_template_{{template_idx}}_label-map_{{label_idx}}'
    - '--evaluation-strategy'
    - 'classification'
    - '--finetune-mode'
    - 'all'
    - '--template'
    - '{{template}}'
    - '--label-map'
    - '{{label_map}}'
    - '--epochs'
    - '30'
    - '--bsz'
    - '2'
    - '--clip'
    - '1.0'
    - '--quiet'
    - '--tmp'
    - '-f'
    - '--evaluation-metric'
    - 'F1'
    - '--skip-train'
    - '--skip-eval'
...
{% endfor %}
{%- endfor %}
