{% for template in [
    '{passage}. Question: {question}? Answer: [P] .',
    '{passage}. Based on the previous passage, {question}? [P] .',
    'Based on the following passage, {question}? [P] . {passage}',
] -%}
{% set template_idx = loop.index %}
{% for label_map in [
    '{"True": "True", "False": "False"}',
    '{"True": "Yes", "False": "No"}',
] -%}
{% set label_idx = loop.index %}
---
out: boolq-manual_model_roberta-large_template_{{template_idx}}_initial-trigger_label-map_{{label_idx}}
script: autoprompt/continuous_trigger_mlm.py
args:
    - '--model-name'
    - 'roberta-large'
    - '--train'
    - 'data/SuperFUGUE/BoolQ/train.jsonl'
    - '--dev'
    - 'data/SuperFUGUE/BoolQ/dev.jsonl'
    - '--test'
    - 'data/SuperFUGUE/BoolQ/dev_all.jsonl'
    - '--ckpt-dir'
    - 'ckpt/boolq-manual_model_roberta-large_template_{{template_idx}}_initial-trigger_label-map_{{label_idx}}
    - '--evaluation-strategy'
    - 'classification'
    - '--finetune-mode'
    - 'trigger'
    - '--template'
    - '{{template}}'
    - '--label-map'
    - '{{label_map}}'
    - '--epochs'
    - '30'
    - '--bsz'
    - '2'
    - '--quiet'
    - '--tmp'
    - '-f'
    - '--skip-train'
    - '--skip-eval'
...
{% endfor %}
{%- endfor %}
