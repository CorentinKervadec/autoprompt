{% for template in [
    '{sentence} It was [P] .',
] -%}
{% set template_idx = loop.index %}
{% for label_map in [
    '{"0": "terrible", "1": "great"}',
] -%}
{% set label_idx = loop.index %}
---
out: sst2-manual_model_roberta-large_template_{{template_idx}}_label-map_{{label_idx}}
script: autoprompt/continuous_trigger_mlm.py
args:
    - '--model-name'
    - 'roberta-large'
    - '--train'
    - 'data/LittleGLUE/SST-2/train.jsonl'
    - '--dev'
    - 'data/LittleGLUE/SST-2/dev.jsonl'
    - '--test'
    - 'data/LittleGLUE/SST-2/dev_all.jsonl'
    - '--ckpt-dir'
    - 'ckpt/sst2-manual_model_roberta-large_template_{{template_idx}}_label-map_{{label_idx}}'
    - '--evaluation-strategy'
    - 'classification'
    - '--finetune-mode'
    - 'all'
    - '--template'
    - '{{template}}'
    - '--label-map'
    - '{{label_map}}'
    - '--epochs'
    - '30'
    - '--bsz'
    - '2'
    - '--clip'
    - '1.0'
    - '--quiet'
    - '--tmp'
    - '-f'
    - '--skip-train'
    - '--skip-eval'
...
{% endfor %}
{%- endfor %}
